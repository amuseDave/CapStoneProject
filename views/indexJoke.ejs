<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="styles.css" />
    <style>
      .back-bttn {
        position: absolute;
        top: 40;
        left: 0;
        z-index: 1;
      }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  </head>
  <body class="joke-body">
    <%- include('partials/header.ejs') %>
    <form class="back-bttn" action="/" method="GET">
      <input type="submit" value="⬅️ Go Back" />
    </form>
    <!---->
    <!---->
    <div class="jokes-container">
      <% if (locals.jokes){ %>
      <!---->
      <% jokes.forEach((joke, index) => { %>
      <div class="joke-container">
        <% if(joke.joke !== undefined){%>
        <div class="saved saved-<%= index %>">
          <span class="joke-title-text jk-j-c-<%= index%>"
            >📔<%= joke.category %>📔</span
          >
          <div class="joke-text joke-t jk-j-<%= index%>"><%=joke.joke%></div>
        </div>
        <%} else {%>
        <div class="saved saved-<%= index %>">
          <span class="joke-title-text jk-sd-c-<%= index%>"
            >📔<%= joke.category %>📔</span
          >
          <div class="joke-text joke-t jk-s-<%= index%>"><%=joke.setup%></div>
          <div class="joke-line"></div>
          <div class="joke-text jk-d-<%= index%>"><%=joke.delivery%></div>
        </div>
        <%}%>
        <div
          data-index="<%= index %>"
          class="joke-save-bttn joke-save-bttn-<%= index%>"
        >
          Save
        </div>
      </div>
      <%})}%>
      <!---->
      <!---->
      <div class="joke-generator-container-wrap">
        <div class="joke-generator-container">
          <form action="/random-joke" method="POST">
            <h2>Select categories</h2>
            <div class="joke-row">
              <h3>Pun</h3>
              <input
                class="joke-input-style"
                type="checkbox"
                name="options"
                value="Pun"
              />
            </div>
            <div class="joke-row">
              <h3>Christmas</h3>
              <input
                class="joke-input-style"
                type="checkbox"
                name="options"
                value="Christmas"
              />
            </div>
            <div class="joke-row">
              <h3>Dark</h3>
              <input
                class="joke-input-style"
                type="checkbox"
                name="options"
                value="Dark"
              />
            </div>
            <div class="joke-row">
              <h3>Spooky</h3>
              <input
                class="joke-input-style"
                type="checkbox"
                name="options"
                value="Spooky"
              />
            </div>
            <div class="joke-submit">
              <select class="joke-select" name="amount">
                <option selected value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
                <option value="6">6</option>
                <option value="7">7</option>
                <option value="8">8</option>
                <option value="9">9</option>
                <option value="10">10</option>
              </select>
              <input
                value="Generate joke :D"
                class="generate-joke-bttn"
                type="submit"
              />
            </div>
          </form>
        </div>
      </div>
      <!---->
      <!---->
    </div>
    <script>
      $(document).ready(() => {
        let savedJokes = [];

        $(".joke-save-bttn").click(function () {
          let sameJoke = false;
          var savedJoke = [];
          const index = $(this).data("index");
          //
          const jokeCat = $(`.jk-sd-c-${index}`).text();
          const jokeS = $(`.jk-s-${index}`).text();
          const jokeD = $(`.jk-d-${index}`).text();
          //
          const jokeCat2 = $(`.jk-j-c-${index}`).text();
          const jokeJ = $(`.jk-j-${index}`).text();
          if (jokeCat === "") {
            savedJoke.push({ category: jokeCat2, joke: jokeJ });
          } else if (jokeCat2 === "") {
            savedJoke.push({
              category: jokeCat,
              setup: jokeS,
              delivery: jokeD,
            });
          }
          if (savedJokes.length === 0) {
            savedJokes.push(savedJoke);
          } else {
            savedJokes.forEach((joke) => {
              if (
                joke.setup === savedJoke.setup ||
                joke.joke === savedJoke.joke
              ) {
                sameJoke = true;
              }
            });
            if (!sameJoke) {
              savedJokes.push(savedJoke);
            }
          }
          console.log(savedJokes);
          console.log(sameJoke);
        });
      });
    </script>
  </body>
</html>
