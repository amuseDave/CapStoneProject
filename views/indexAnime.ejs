<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="styles.css" />
  </head>
  <body class="anime-body">
    <%- include('partials/header.ejs') %>
    <form class="fixed-anime" action="/" method="GET">
      <input type="submit" value="‚¨ÖÔ∏è Go Back" />
    </form>
    <div class="anime-cont">
      <% if (locals.trailer){%>
      <iframe
        class="embed-anime-video"
        src="<%= trailer %>"
        frameborder="0"
        autoplay
      ></iframe>
      <%}else if (locals.images){%>
      <img class="anime-image" src="<%=images.large_image_url%>" alt="" />
      <% }%>
      <div class="anime-info-container">
        <div class="anime-info-title">
          <% if (locals.titles){ titles.forEach((title) => { %>
          <h2>
            <span class="anime-title"><%=title.type %> Title:</span><br />
            <%= title.title %>
          </h2>
          <%})}%>
        </div>
        <div class="anime-description">
          <div class="anime-row">
            <label class="label" for="description">Description:</label>
            <a
              style="margin-left: 5px"
              name="description"
              href="/anime-description"
            >
              Click here</a
            >
          </div>
          <div class="anime-row">
            <div class="label">Genre:</div>
            <div class="anime-row">
              <% if(locals.type.length != 0){%> <% type.forEach((genre) => {%>
              <h4>
                | <span class="anime-text-shadow"><%= genre.name %></span> |
              </h4>
              <%})}else {%>
              <h4 class="star-error">| No Data |</h4>
              <%}%>
            </div>
          </div>
          <div class="anime-row">
            <div class="label">Ratings:</div>
            <div class="anime-row">
              <%if (locals.score.score != null){%>
              <h4 class="anime-star">
                |
                <span class="anime-text-shadow"
                  >‚≠ê<%= score.score %> üïµÔ∏è<%=score.scoredBy %></span
                >|
              </h4>
              <%}else {%>
              <h4 class="star-error">| No Ratings |</h4>
              <%}%>
              <!--SPACE-->
              <%if (locals.rank.rank != null){%>
              <h4 class="anime-star">
                | <span class="anime-text-shadow">üîù<%= rank.rank %></span> |
              </h4>
              <!--SPACE-->
              <%}%>
            </div>
          </div>
          <div class="anime-row">
            <div class="label">Year Release:</div>
            <div class="anime-row">
              <% if (locals.year != null){%>
              <h4>| <span class="anime-text-shadow">üìÖ<%= year %></span> |</h4>
              <%}else {%>
              <h4 class="star-error">| No Data |</h4>
              <%}%>
            </div>
          </div>
        </div>
      </div>
      <form action="/random-anime" method="POST">
        <input
          class="anime-button"
          type="submit"
          name="anime"
          value="üîñGenerate Animeüîñ"
        />
      </form>
    </div>
  </body>
</html>
